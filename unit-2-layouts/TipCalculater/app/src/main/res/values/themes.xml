<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TipCaluculater" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sea_green</item>
        <item name="colorPrimaryVariant">@color/sea_green_dark</item>
        <item name="colorOnPrimary">@color/text_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sea_green</item>
        <item name="colorSecondaryVariant">@color/sea_green_dark</item>
        <item name="colorOnSecondary">@color/text_on_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" tools:targetApi="1">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="radioButtonStyle">@style/Widget.TipCaluculater.CompoundButton.RadioButton</item>
        <item name="switchStyle">@style/Widget.TipCaluculater.CompoundButton.Switch</item>

    </style>

    <style name="Theme.TipCaluculater.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TipCaluculater.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TipCaluculater.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>